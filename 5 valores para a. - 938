	printf("Digite um valor:\n");
	scanf("%f", &a);
	if (a < 0)
	qnt++;
	
	printf("Digite um valor:\n");
	scanf("%f", &a);
	if (a < 0)
	qnt++;
	
	printf("Digite um valor:\n");
	scanf("%f", &a);
	if (a < 0)
	qnt++;
	
	printf("Digite um valor:\n");
	scanf("%f", &a);
	if (a < 0)
	qnt++;
	
	printf("Digite um valor:\n");
	scanf("%f", &a);
	if (a < 0)
	qnt++;
